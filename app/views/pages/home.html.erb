<div class="left-sidebar"><h2><%= t "layouts.product" %></h2></div>
<div class="container">
  <div class="row">
    <div class="flat-projects projects-masonry projects-has-filter">
      <div class="projects-items">
        <% @products.each do |product| %>
          <div class="col-sm-3">
            <div class="projects hentry handmade photos menu-1"">
              <div class="project-wrap">
                <div class="project-thumbnail menu-2">
                  <%= image_tag product.picture.url if product.picture? %>
                </div>
                <div class="project-info">
                  <div class="project-info-wrap">
                    <h3 class="project-title">
                      <%= link_to product.name, product %>
                    </h3>
                    <h6 class="project-buttons">
                      <%= link_to t("buy"), new_order_path,
                        class: "flat-button" %>
                    </h6>
                  </div>
                </div>
              </div><!-- /.project-wrap -->
            </div><!-- /.hentry -->
          </div>
        <% end %>
      </div><!-- /.projects-items -->
    </div><!-- /.blog-shortcode -->
  </div><!--  -->
</div>
