<%= form_with model: [:user, message], local: true do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %>
        <%=  t "prohibited" %>
      </h2>
      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :body,
      value: "#{current_user.name}" %>
  </div>

  <div class="actions">
    <%= form.submit "Yes, I want to become a seller", class: "input-submit" %>
  </div>
<% end %>
